<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="3dp" android:top="2dp">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#88BABABA" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item>
                <shape>
                    <solid android:color="#F1CA30" />
                    <stroke android:width="1px" android:color="@color/news_border" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="3dp" android:top="2dp">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#88BABABA" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="3dp" android:right="2dp">
                <shape>
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1px" android:color="@color/news_border" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
